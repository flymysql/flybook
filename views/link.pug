extends layout
block head_content
  title= "友链 | 兰州小红鸡"
  meta(name="description" content="兰州小红鸡")
  meta(name="keywords" content="兰州小红鸡,博客,技术博客,写作,阅读")
  link(rel="stylesheet", href="https://unpkg.com/autocjs@1.3.0/dist/autoc.min.css")
  link(rel='stylesheet', href='/stylesheets/post.css')
  link(rel='stylesheet', href='/stylesheets/link.css')
block content
    include partails/post-aside  
    div(class="post-content")
        h2(class="post-title")= title
        div(class="author")
            a(class="avatar" href="/post/about" target="_blank")
                img(src="/images/head.png" id="no-view")
            div(class="info")
                span(class="name")
                    a(href="/" target="_blank")= "小鸡"
                a(class="follow" href="/post/email" target="_blank")
                    span= "关注"

        article(class="post-body")
            ul(class="index-list")
                each link in links
                    li
                        a(href=link.href target="_blank" class="avatar")
                            img(src=link.src)
                        a(class="follow" state="0" href=link.href target="_blank")="关注"
                        a(href=link.href target="_blank" class="index-name")=link.name
                        p=link.desc

        div(class="ads")
            a(class="ads-link" href="https://me.idealli.com/post/651cfd47.html" target="_blank")
                img(data-src="https://me.idealli.com/uploads/images/imageup-1558576491588.png", class="ads-img" id="no-view")
        div(class="tag-cloud-tags" id="tagcloud") 
        br
        div(class="comment" id="comment")
         
