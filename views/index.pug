extends layout
block head_content
  title= site.title
  meta(name="description" content="兰州小红鸡的博客，代码记录成长")
  meta(name="keywords" content="兰州小红鸡,博客,技术博客,写作,阅读")
  link(rel='stylesheet', href='/stylesheets/index.css?t='+sst)
block content
  div(class="index-container")
    div(class= "post-container")
      ul(class="post-list" id="post-list")
        include partails/carousel
        each post in list
          li(class="post-item")
            if post.img != ""
              a(href="/post/" + post.id class="post-item-img")
                img(data-src=post.img, alt="" id="no-view" src="/images/loading.gif")
              div(class="post-item-content-img")
                h2(class="post-item-title")
                  a(href="/post/" + post.id)=post.title
                p!=post.content
                div(class="post-item-meta")
                  span(class="cop")= "✿" + post.cop
                  span= " 阅读" + post.view
                  span= " " + post.tag
                  span= " " + post.updateTime
            else
              div(class="post-item-content")
                h2(class="post-item-title")
                  a(href="/post/" + post.id)=post.title
                p!=post.content
                div(class="post-item-meta")
                  span(class="cop")= "✿" + post.cop
                  span= " 阅读" + post.view
                  span= " " + post.tag
                  span= " " + post.updateTime
      div(class="ads")
            a(class="ads-link" href="https://me.idealli.com/post/651cfd47.html" target="_blank")
                img(data-src="https://me.idealli.com/uploads/images/imageup-1558576491588.png", class="ads-img" id="no-view")
      if !tag
        div(class="next-pre")
          button(id="more" class="index-more")= "查看更多"
    include partails/inside
block scripts
  script(src="/javascripts/more_post.js?t=" + sst)
    


